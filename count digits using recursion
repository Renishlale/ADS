   
#include <stdio.h>

int count_num(int n);


int main() 
{
    int n;
    
    printf("\n Enter the number:");
    scanf("%d",&n);
    if(n == 0)
    {
      printf("Number of digits in 0 = 1\n");
    }
    else
    {
      printf("\nNumber of digits in %d=%d",n,count_num(n));
    } 
    return 0;
}

int count_num(int n)
{
    if(n==0)
    {
        return 0;
    }
    
    else
    {
        return (1+count_num(n/10));
    }
}
