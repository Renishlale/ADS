#include <stdio.h>

int main() {
    char exp[100];
    int i, count = 0;

    printf("Enter expression: ");
    scanf("%s", exp);

    for(i = 0; exp[i] != '\0'; i++) {
        if(exp[i] == '(')
            count++;
        else if(exp[i] == ')')
            count--;

        if(count < 0) break; // more ')' than '('
    }

    if(count == 0)
        printf("Balanced!\n");
    else
        printf("Not Balanced!\n");

    return 0;
}
