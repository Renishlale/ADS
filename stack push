 
#include <stdio.h>

int main()
{
    int size,n,top=-1,value;
    
    printf("Enter the size of the stack:");
    scanf("%d",&size);
    int stack[size];
    
    printf("Enter the number of elements to be entered:");
    scanf("%d",&n);
    
    if(n>size)
    {
        printf("\n %d number of elements cannot be pushed",n);
    }
   else
   {
   
     for(int i=0;i<n;i++)
     {
         printf("\n Enter the value of the element %d:",i+1);
         scanf("%d",&value);
          top++;
          stack[top]=value;
          printf("\n %d pushed into the stack\n ",value);
     }
     
     printf("\n -------------Stack--------------");
     for(int i=top;i>=0;i--)
     {
         printf("\n %d",stack[i]);
         
     }
   } 
      return 0;
}
