 
#include <stdio.h>

int main()
{
  char exp[500];
  int count=0;
  
  
  
  printf("Enter the expression:");
  scanf("%s",exp);
  
  for(int i=0;exp[i]!='\0';i++)
  {
      if(exp[i]=='(')
      {
          count++;
      }
      else if(exp[i]==')')
      {
          count--;
      }
      
      if(count<0)
      {
          break;
      }
  }
  
  
  
  if(count==0)
  {
      printf("Balenced!");
      
  }
  else
  {
      printf("Not balenced!");
      
  }
  
   
     

    return 0;
}
