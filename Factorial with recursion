 
#include <stdio.h>

int fact();


int main() 
{
    int n,f;
    
    printf("\n Enter the number:");
    scanf("%d",&n);
    f=fact(n);
   printf("\n Factorial of %d=%d",n,f);
    return 0;
}

int fact(int n)
{
    if(n==0)
    {
        return 1;
    }
    else if(n==1)
    {
        return 1;
    }
    else
    {
        return (n*fact(n-1));
    }

    
}
